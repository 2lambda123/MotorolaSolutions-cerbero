class Recipe(recipe.Recipe):
    name = 'libffi'
    version = '3.0.13'
    stype = SourceType.TARBALL
    url = 'http://www.mirrorservice.org/sites/sourceware.org/pub/libffi/libffi-3.0.13.tar.gz'
    licenses = [License.BSD_like]

    files_libs = ['libffi']
    files_devel = ['lib/libffi-3.0.13', 'lib/pkgconfig/libffi.pc']

    def prepare(self):
        if self.config.target_platform  in [Platform.DARWIN, Platform.IOS]:
            if self.config.target_arch == Architecture.X86_64:
                dir = 'x86_64-apple-darwin*'
            elif self.config.target_arch == Architecture.X86:
                dir = 'i386-apple-darwin*'
            elif self.config.target_arch == Architecture.PPC:
                dir = 'powerpc-apple-darwin*'
            elif self.config.target_arch == Architecture.ARMv7:
                dir = 'arm-apple-darwin*'

            self.make = 'make -C %s' % dir
            self.make_install = 'make -C %s install' % dir

       # From https://github.com/zwaldowski/libffi to fix compilation with iOS SDK 7.0
        if self.config.target_platform == Platform.IOS:
            self.patches = ['libffi/0002-Use-unified-syntax-so-that-stmeqia-doesn-t-come-up-a.patch',
                            'libffi/0003-Force-4-byte-alignment-for-ARM-functions-so-that-LLV.patch',
                            'libffi/0004-Some-modern-unified-syntax-assemblers-don-t-like-mac.patch',
                            'libffi/0005-Use-a-define-macro-for-ARM_FUNC_START-due-to-changes.patch',
                           ]
